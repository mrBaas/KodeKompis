<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_dataBolk"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:background="@color/main_background_color"
	>
		
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/dialog_shape"
        >
        
        <!-- HEADER -->
        <TextView
            android:padding="10dp"
            android:background="@drawable/dialog_header_shape"
	        android:text="@string/dialog_header"
	        android:textColor="@color/contrast_color_blue"
	        android:textStyle="bold" 
	        android:textSize="22sp"
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        />
        <!-- END HEADER -->
	    
	    <LinearLayout
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/dialog_border"
		    android:paddingTop="0dp"
   			android:paddingBottom="5dp"
   			android:paddingLeft="5dp"
   			android:paddingRight="5dp"
		    android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
		    >
		    
	    	<LinearLayout
			    android:orientation="horizontal"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center"
			    >
			    <ImageView
			        android:id="@+id/icon_sted"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@null"
			        android:src="@drawable/tedes_user"
			        android:padding="2dp"
			        />
		        <TextView
			        android:text="@string/dialog_sted_valg"
			        android:textColor="@color/font_black_on_white"
			        android:padding="10dp"
			        android:textStyle="bold" 
			        android:textSize="20sp"
			        android:layout_width="match_parent" 
			        android:layout_height="wrap_content"
			        />
	        </LinearLayout>
		    
		    <EditText 
		        android:id="@+id/dialog_input_sted"
		        android:textColor="@color/font_black_on_white"
		        android:layout_width="match_parent" 
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:hint="@string/dialog_sted_hint"
		        />
	    </LinearLayout>
	    
        <LinearLayout
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/dialog_border"
		    android:paddingTop="0dp"
   			android:paddingBottom="5dp"
   			android:paddingLeft="5dp"
   			android:paddingRight="5dp"
		    android:layout_marginTop="10dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    >
		    <LinearLayout
			    android:orientation="horizontal"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center"
			    >
			    <ImageView
			        android:id="@+id/icon_user"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@null"
			        android:src="@drawable/tedes_user"
			        android:padding="2dp"
			        />
		        <TextView
			        android:text="@string/dialog_bruker_valg"
			        android:textColor="@color/font_black_on_white"
			        android:padding="10dp"
			        android:textStyle="bold" 
			        android:textSize="20sp"
			        android:layout_width="match_parent" 
			        android:layout_height="wrap_content"
			        />
	        </LinearLayout>
			    
		    <EditText 
		        android:id="@+id/dialog_input_bruker"
		        android:textColor="@color/font_black_on_white"
		        android:layout_width="match_parent" 
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:hint="@string/dialog_bruker_hint"
		        />
       	</LinearLayout>
       	
    	<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/dialog_border"
		    android:paddingTop="0dp"
   			android:paddingBottom="5dp"
   			android:paddingLeft="5dp"
   			android:paddingRight="5dp"
		    android:layout_marginTop="10dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    >
    		<LinearLayout
			    android:orientation="horizontal"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center"
			    >
			    <ImageView
			        android:id="@+id/icon_pass"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@null"
			        android:src="@drawable/tedes_user"
			        android:padding="2dp"
			        />
		        <TextView
			        android:text="@string/dialog_passord_valg"
			        android:textColor="@color/font_black_on_white"
			        android:padding="10dp"
			        android:textStyle="bold" 
			        android:textSize="20sp"
			        android:layout_width="match_parent" 
			        android:layout_height="wrap_content"
			        />
	        </LinearLayout>
			    
		    <EditText 
		        android:id="@+id/dialog_input_passord"
		        android:textColor="@color/font_black_on_white"
		        android:layout_width="match_parent" 
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:hint="@string/dialog_pass_hint"
		        />
   		</LinearLayout>
	</LinearLayout>
    
   	<LinearLayout 
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >
    
	    <Button 
	        android:id="@+id/dialog_button_avbryt"
	        android:textColor="@color/font_black_on_white"
	        android:layout_width="120dp" 
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
			android:text="@string/dialog_text_avbryt"
	        />
   
	    <Button 
	        android:id="@+id/dialog_button_legg_til"
	        android:textColor="@color/font_black_on_white"
	        android:layout_width="120dp" 
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
			android:text="@string/dialog_text_legg_til"
	        />
	</LinearLayout>
</RelativeLayout>